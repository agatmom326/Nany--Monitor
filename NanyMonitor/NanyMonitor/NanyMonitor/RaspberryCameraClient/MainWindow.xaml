<Window x:Class="RaspberryCameraClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raspberry Camera Client" Height="350" Width="524" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="240*" />
            <RowDefinition Height="71" />
        </Grid.RowDefinitions>
        <WindowsFormsHost Name="VideoWindow" />
        <Button Content="Start Capturing" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="12,35,0,0" Name="StartCapturingBtn" VerticalAlignment="Top" Width="97" Click="OnStartCapturingButtonClick" />
        <Button Content="Stop Capturing" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="115,35,0,0" Name="StopCapturingBtn" VerticalAlignment="Top" Width="97" Click="OnStopCapturingButtonClick" />
    </Grid>
</Window>
